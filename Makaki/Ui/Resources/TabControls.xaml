<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">

    <Style x:Key="TabControlHeader" BasedOn="{StaticResource MetroTabItem}" TargetType="{x:Type TabItem}">
        <Setter Property="controls:ControlsHelper.HeaderFontSize" Value="14"></Setter>
        <Setter Property="BorderThickness" Value="0 0 1 1"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"></Setter>
    </Style>
</ResourceDictionary>